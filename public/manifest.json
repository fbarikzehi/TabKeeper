{
    "manifest_version": 3,
    "name": "🌐TabKeeper",
    "version": "1.0",
    "description": "🌐TabKeeper is a browser tab manager🤩",
    "author": "fbarikzehi",
    "permissions": [
        "storage",
        "unlimitedStorage",
        "tabs",
        "downloads",
        "identity",
        "alarms",
        "activeTab"
    ],
    "host_permissions": [
        "*://*/*"
    ],
    "background": {
        "scripts": [
            "browser-polyfill.js",
            "./background.js"
        ]
    },
    "action": {
        "default_popup": "./index.html",
        "default_icon": "./icons/64.png",
        "default_title": "🌐TabKeeper"
    },
    "icons": {
        "16": "./icons/16.png",
        "32": "./icons/32.png",
        "48": "./icons/48.png",
        "64": "./icons/64.png",
        "96": "./icons/96.png",
        "128": "./icons/128.png"
    }
}